#include<stack>
vector<int> nextSmallerElement(vector<int> &arr, int n)
{
    // Write your code here.
    stack<int> s;
    vector<int> v(n);
    s.push(-1);
    int curr=0;
    for(int i=n-1;i>=0;i--)
    {
      curr=arr[i] ;
      while(!s.empty()  && s.top()>=curr)
      {
          s.pop();
      }
      if(!s.empty())
     v[i]=s.top();
      s.push(curr);
    }

 
    return v;
}
